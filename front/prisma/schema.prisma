generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  name      String?
  email     String?  @unique
  phone     String?
  state     String?
  municipality String?
  role      String   @default("USER")
  sessionToken String?
  resetToken String?
  resetTokenExpiry DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  submissions Submission[]
}

model Section {
  id          String     @id @default(uuid())
  title       String
  description String?
  weight      Int        @default(1)
  order       Int        @default(0)
  questions   Question[]
}

model Question {
  id        String   @id @default(uuid())
  text      String
  type      String
  options   String?  // JSON array: ["option1", "option2", "option3", "option4", "option5"]
  weight    Int      @default(1)
  order     Int      @default(0)
  sectionId String
  section   Section  @relation(fields: [sectionId], references: [id])
  answers   Answer[]
}

model Submission {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  status    String   @default("IN_PROGRESS")
  completedSectionIds String @default("[]")
  score     Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  answers   Answer[]
  metadatos MetadatosEvaluacion?
}

model Answer {
  id           String     @id @default(uuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id])
  questionId   String
  question     Question   @relation(fields: [questionId], references: [id])
  value        String
  score        Float?
}

model MetadatosEvaluacion {
  id                    String     @id @default(uuid())
  submissionId          String     @unique
  submission            Submission @relation(fields: [submissionId], references: [id])
  
  // Información del Ayuntamiento
  nombreMunicipio       String?
  estado                String?
  anioCapturo           Int?
  fechaInicioEvaluacion DateTime?
  periodoVigencia       String?
  poblacion             Int?
  presupuestoAnual      Float?
  numeroEmpleados       Int?
  presidenteMunicipal   String?
  
  // Información del Responsable
  nombreResponsable     String?
  cargoResponsable      String?
  correoInstitucional   String?
  correoPersonal        String?
  telefonoMovil         String?
  telefonoDepartamental String?
  fechaNacimiento       DateTime?
  departamento          String?
  
  creadoEn              DateTime   @default(now())
  actualizadoEn         DateTime   @updatedAt
}
